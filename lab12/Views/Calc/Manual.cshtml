@{
    ViewData["Title"] = "Manual";
}
<h2>Manual</h2>
<form method="post">
    <input type="number" step="any" name="first" class="form-control mb-2" placeholder="Первое число" />
    <select name="operation" class="form-control mb-2" style="max-width:6rem">
        <option value="+">+</option>
        <option value="-">-</option>
        <option value="*">*</option>
        <option value="/">/</option>
    </select>
    <input type="number" step="any" name="second" class="form-control mb-2" placeholder="Второе число" />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
